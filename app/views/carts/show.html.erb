<p id="notice"><%= notice %></p>

<p>
  <strong>User:</strong>
  <%= @cart.user_id %>
</p>

<p>
  <strong>Items:</strong>
  <table>
  <% @cart_items.each do |item| %>
    <tr>
      <td> <%= image_tag item.main_image %> </td>
      <td> $<%= number_with_precision(item.price, precision: 2) %> </td>
      <td> <%= link_to 'Remove from cart' %></td>
    </tr>
  <%end%>
  </table>
</p>

<p>
  <strong>Subtotal:</strong>
  $<%= number_with_precision(@subtotal, precision: 2)  %>
</p>

<%= link_to 'Edit', edit_cart_path(@cart) %> |
<%= link_to 'Back', images_path %>
